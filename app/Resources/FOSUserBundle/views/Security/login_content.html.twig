{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <input type="text" class="ggg" id="username" name="_username" placeholder="Identifiant" required="required" autocomplete="username" />
    <input type="password" class="ggg" id="password" name="_password" required="required" placeholder="Mot de passe" autocomplete="current-password" />
    <span><input type="checkbox" id="remember_me" name="_remember_me" value="on" />Se souvenir</span>
    <h6><a href="{{ path('fos_user_resetting_request') }}">password oublié?</a></h6>
    <div class="clearfix"></div>
    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
</form>
<p>Pas encore de compte?<a href="{{ path('fos_user_registration_register') }}">Créer un compte</a></p>
