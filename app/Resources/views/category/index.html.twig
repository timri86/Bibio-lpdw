{% extends 'base.html.twig' %}

{% block body %}

<div class="table-agile-info">
    {% if is_granted('ROLE_ADMIN') == true %}
    <a class="btn btn-success" href="{{ path('category_new') }}"><i class="fa fa-plus-square"></i> Ajouter une catégorie</a>
    {% endif %}
    <div class="panel panel-default">
        <div class="panel-heading">
            Liste des Catégories
        </div>
        <div class="table-responsive">
            <table class="table table-striped b-t b-light">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.nom }}</td>
                        <td>{{ category.description }}</td>
                        <td>
                            <a class="btn btn-default" href="{{ path('category_show', { 'id': category.id }) }}"><i class="fa fa-eye"></i> Afficher</a>
                            <a class="btn btn-primary" href="{{ path('category_edit', { 'id': category.id }) }}"><i class="fa fa-pencil-square"></i> Modifier</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
             </table>
        </div>
    </div>
</div>
    <ul>
        <li>
            <a href="{{ path('category_new') }}">Create a new category</a>
        </li>
    </ul>
{% endblock %}
